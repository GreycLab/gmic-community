        +autocrop. x1={$x0+w-1} y1={$y0+h-1} rm. u $x0,$y0,$x1,$y1
      "} rm. ($coord) done
    a[^0] y done r[0] {[$w0,$h0]+2},1,3,0,0,0.5,0.5
    repeat h x0,y0,x1,y1={@{[0,1,2,3]+4*$>}} +z[0,1] $x0,$y0,$x1,$y1
      +ip.. f. i#4?i#5:i#3 j[0] .,$x0,$y0 rm[-3--1]
    done k[0] r {[$w0,$h0]},1,3,0,0,0.5,0.5
  else ip
